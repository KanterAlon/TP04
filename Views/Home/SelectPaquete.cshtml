<div>
    <a href='@Url.Action("Index")'>Home</a>
</div>

@{
    ViewData["Title"] = "Crear Paquete";
}

<h2>Crear Paquete</h2>

<form asp-action="GuardarPaquete" method="post">
    <div>
        <label for="destino">Destino:</label>
        <select id="destino" name="Destino">
            @foreach (var destino in ViewBag.ListaDestinos)
            {
                <option value="@destino">@destino</option>
            }
        </select>
    </div>
    
    <div>
        <label for="hotel">Hotel:</label>
        <input type="number" id="hotel" name="Hotel" min="1" max="10" required />
    </div>

    <div>
        <label for="aereo">Aéreo:</label>
        <input type="number" id="aereo" name="Aereo" min="1" max="10" required />
    </div>

    <div>
        <label for="excursion">Excursión:</label>
        <input type="number" id="excursion" name="Excursion" min="1" max="10" required />
    </div>

    <button type="submit">Crear Paquete</button>
</form>
